---
import ContactForm from '../../components/forms/ContactForm.astro';
import Layout from '../../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';

const seo = {
	title: 'Contact Deepline | Get in Touch About ML Pipeline Setup',
	description: 'Ready to simplify your ML pipeline setup? Contact our team to learn more about Deepline or request beta access.',
};
---

<Layout seo={seo}>
	<Container>
		<section class="contact-hero__section">
			<div class="contact-hero__text-section">
				<h1>Let's Talk ML Pipelines</h1>
				<p>
					Ready to cut your ML pipeline setup time from weeks to hours? Whether you want to join our beta, have questions about our approach, or just want to discuss ML infrastructure challenges - we'd love to hear from you.
				</p>
			</div>
			<div class="col-2__container">
				<ContactForm />
			</div>
		</section>
	</Container>
</Layout>

<style>
	.contact-hero__section {
		margin: var(--section-margin) auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		min-height: calc(90vh - var(--navbar-height));
		gap: 3rem;
	}
	
	.contact-hero__text-section {
		padding: 2rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		background-color: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
	}
	
	.direct-contact {
		margin-top: 1.5rem;
		padding-top: 1.5rem;
		border-top: 2px solid var(--theme-primary);
	}
	
	.direct-contact p {
		margin: 0;
	}
	
	.direct-contact strong {
		color: var(--theme-on-surface-1);
	}
	
	.direct-contact a {
		color: var(--theme-primary);
		text-decoration: none;
		transition: opacity var(--theme-transition);
	}
	
	.direct-contact a:hover {
		opacity: 0.8;
	}
	
	.col-2__container {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	
	@media (max-width: 768px) {
		.contact-hero__section {
			grid-template-columns: 1fr;
		}
		
		.contact-hero__text-section {
			padding: 1.5rem;
		}
	}
</style>